 var conn = "exodus";
 if (not dbdelete("xo_gendoc_testdb")) {}; // Cleanup first
 if (conn.dbcreate("xo_gendoc_testdb")) ... ok
 // or
 if (dbcreate("xo_gendoc_testdb")) ...
